<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moja">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="Authenticating.SignupLogin"
            android:theme="@style/NoBars"/>
        <activity android:name=".Posts.PostDetails" />
        <activity android:name=".Posts.AddPost" />
        <activity android:name=".Posts.Detail" />
        <activity android:name=".Posts.MainActivity" />
        <activity
            android:name="Authenticating.SplashScreen"
            android:theme="@style/NoBars">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>